                                        </div>

                                        <div class="form-group">
                                            <label class="control-label pull-right">Optional</label>
                                            <label asp-for="GithubLink" class="control-label"></label>
                                            <input asp-for="GithubLink" class="form-control" disabled>
                                        </div>

                                        <fieldset class="form_fieldset">
                                            <div class="form_header">
                                                <img class="pull-right form_header__img" src="~/public/img/streams_logo.svg" width="50">
                                                <h3>Streams</h3>
                                            </div>

                                            <div class="asset_link_list asset_link_list--alt">
                                                <div class="asset_link">
