@model Microsoft.IdentityModel.Protocols.OpenIdConnect.OpenIdConnectMessage

<div class="text-center">
    <h3>Logging out, please wait...</h3>
    <form action="@Url.Action("Logout")" enctype="application/x-www-form-urlencoded" method="post" id="logout">
        @Html.AntiForgeryToken()

        @* Flow the logout request *@
        @foreach (var parameter in Model.Parameters)
        {
            <input type="hidden" name="@parameter.Key" value="@parameter.Value" />
        }
    </form>
</div>

@section scripts
{
    <script>
        $(function() {
            $('#logout').submit();
        });
    </script>
}
