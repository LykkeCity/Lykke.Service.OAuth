@{
    Layout = "_LoginLayout.Mobile";
}

@model WebAuth.Models.LoginViewModel

@section HeadStyles
    {

    <environment names="Development">
        <link rel="stylesheet" href="~/styles/ios.css" asp-append-version="true">
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/ios.min.css" asp-append-version="true">
    </environment>

}

<div class="auth_group auth_group--form">
    <div class="container">
        <img src="~/images/logo.ios.svg" alt="Lykke" class="auth_group__logo" width="120" height="120">

        <form novalidate enctype="application/x-www-form-urlencoded" method="post" asp-route-returnurl="@Model.ReturnUrl" asp-controller="Authentication" asp-action="Signin" class="auth_group__form">
            <div class="form-group">
                <div class="form-group-input">
                    <input type="email" id="email" required class="form-control" asp-for="Username" tabindex="1">
                    <label for="email" class="control-label">Email</label>
                </div>
                <div class="form-group-input">
                    <input type="password" id="password" required class="form-control" asp-for="Password" tabindex="2">
                    <label for="password" class="control-label">Password</label>
                    <button class="btn btn--icon input-group-addon _toggle_password" type="button"><i class="eye_icon eye_icon--show_password_alt"></i></button>
                </div>
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <input type="hidden" name="IsLogin" value="true" />
            </div>
            <div class="error_message" asp-validation-summary="All"></div>
            <div id="recaptcha" class="form-group text-center">
                <div class="g-recaptcha" data-sitekey="@Model.LoginRecaptchaKey" data-theme="white" data-callback="captchaValid"></div>
            </div>
            <div class="auth_group__indent">
                <button id="submit" type="submit" class="btn btn--gradient btn-block" disabled>Sign in</button>
            </div>
            
            <div class="footer_buttons clearfix">
                <div class="pull-left">
                    <button class="btn btn--link" type="button" id="hint">Send me hint</button>
                </div>
                <div class="pull-right">
                    <button class="btn btn--link" type="button" id="request">I forgot my password</button>
                </div>
            </div>
        </form>

    </div>
</div>

<div class="loader">
    <div class="spinner">
        <div class="spinner__inside"></div>
    </div>
</div>

