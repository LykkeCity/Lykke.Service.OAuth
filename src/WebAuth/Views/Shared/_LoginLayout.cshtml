    <environment names="Staging,Production">
        <script src="~/dist/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", false)

    <script>
        $.notify.defaults({
            style: 'notify',
            gap: 5
        });

        $.notify.addStyle('notify', {
            html:
            "<div class='notify_inner'>" +
            "<div class='title' data-notify-html='title'/>" +
            "<button type='button' class='btn_close btn btn--icon'><i class='icon icon--cancel_round'></i></button>" +
            "</div>"
