    <article class="content page page_auth">

        <section class="section section--padding">
            <div class="container">

                <div class="row">
                    <div class="col-md-10 automargin">
                        <div class="header__logo header_logo">
                            <a href="/">
                                <img class="header_logo__img" src="/images/lykke_new.svg" height="40" alt="lykke_logo">
                            </a>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="section_header">
                                    <div class="section_title">Discover the future of markets</div>
                                    <div class="section_subtitle">You will use this login information to access all Lykke products and services</div>
                                </div>

                                <div class="logos">
                                    <img src="/images/lykke_wallet_logo.svg" alt="lykke wallet" width="40" height="40">
                                    <img src="/images/streams_logo.svg" alt="streams" width="40" height="40">
                                    <img src="/images/bl_explorer_logo.svg" alt="blockchain explorer" width="40" height="40">
                                </div>
